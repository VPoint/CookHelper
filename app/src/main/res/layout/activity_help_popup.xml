<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#de000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.32" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="    How Use CookHelper"
        android:textSize="24sp"
        tools:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text='Search by ingredient, category or type. Use a comma to specify "AND" between search values. Use a semicolon to specify "OR" between search values. Use an exclamation mark for items you want to exclude.'
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="For example: tomato; onion, !garlic translates to tomato OR onion AND NOT garlic"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:text="Use the dropdown menu to select the option that you want to search by. Press advanced search to combine type and category options in search."
        android:textSize="18sp" />
</LinearLayout>