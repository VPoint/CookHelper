<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#deFFFFFF"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:marginBottom="@dimen/activity_vertical_margin"
    android:marginLeft="@dimen/activity_horizontal_margin"
    android:marginRight="@dimen/activity_horizontal_margin"
    android:marginTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/helpTitle"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="    How Use CookHelper"
        android:textSize="24sp"
        tools:textColor="@android:color/background_dark"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/helpText"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text='Search by ingredient, category or type. Use a comma to specify "AND" between search values. Use a semicolon to specify "OR" between search values. Use an exclamation mark for items you want to exclude.'
        android:textSize="18sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/helpExample"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="For example: tomato; onion, !garlic translates to tomato OR onion AND NOT garlic"
        android:textSize="18sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:text="Use the dropdown menu to select the option that you want to search by. Press advanced search to combine type and category options in search."
        android:textSize="18sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>
</LinearLayout>