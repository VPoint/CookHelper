    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:alignmentMode="alignMargins">

                <TextView
                    android:text="Recipe Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/formTitleLabel" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/formTitle" />

                <TextView
                    android:text="Description:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/formDescriptionLabel" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/formDescription" />

                <TextView
                    android:text="Number of Calories:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/formCaloriesLabel" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:id="@+id/formCalories"
                    android:inputType="number" />

                <TextView
                    android:text="Cooking Time: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:ems="10"
                    android:id="@+id/formCookingTime"
                    android:inputType="number" />

                <TextView
                    android:text="Servings:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:ems="10"
                    android:id="@+id/formServing"
                    android:inputType="number" />

                <TextView
                    android:text="Add Category:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_alignBottom="@+id/formType"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/formCategory"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="Add Type:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_above="@+id/formCategory"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/formType"
                    android:layout_above="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </GridLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Rating:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addRatingLabel" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addRating"
                    android:numStars="5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Ingredients: "
                    android:id="@+id/addIngredientlabel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/addIngredientInput"
                    android:layout_below="@+id/titleFeatured"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <!--<Button
                    android:text="Add Ingredient(s)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:layout_below="@+id/editText8"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:backgroundTint="@color/colorPrimary" />-->
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Add Instructions:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addRecipeStepLabel"
                    android:layout_above="@+id/addRecipeStepInput"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:ems="10"
                    android:id="@+id/addRecipeStepInput"
                    android:layout_above="@+id/saveButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:inputType="textMultiLine" />

                <!--<Button
                    android:text="Add Step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1"
                    android:layout_above="@+id/button2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:backgroundTint="@color/colorPrimary" />-->

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/saveButton"
                    android:layout_weight="1"
                    android:textColor="@color/white_text"
                    android:backgroundTint="@color/colorPrimary" />

                <Button
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/cancelButton"
                    android:layout_weight="1"
                    android:textColor="@color/white_text"
                    android:backgroundTint="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
